@page
@model HospitalRecordBook.Appointments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Post a Appointment</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment.AppointmentTitle" class="control-label"></label>
                <input asp-for="Appointment.AppointmentTitle" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Description" class="control-label"></label>
                <input asp-for="Appointment.Description" class="form-control" />
                <span asp-validation-for="Appointment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.PatientID" class="control-label"></label>
                <select asp-for="Appointment.PatientID" class ="form-control" asp-items="ViewBag.PatientID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Post Appointment Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
