@page
@model HospitalRecordBook.Appointments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">View All Appointments</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].AppointmentTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.PatientID)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.AppointmentID">Edit</a> |
                <a asp-page="./Details" class="btn btn-warning" asp-route-id="@item.AppointmentID">Details</a> |
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.AppointmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
