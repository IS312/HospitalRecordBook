@page
@model HospitalRecordBook.Specializations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Specialization Details</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Specialization.SpecializationID" />
            <div class="form-group">
                <label asp-for="Specialization.SpecializationName" class="control-label"></label>
                <input asp-for="Specialization.SpecializationName" class="form-control" />
                <span asp-validation-for="Specialization.SpecializationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Specialization Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
