@page
@model HospitalRecordBook.Doctors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add New Doctor</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Doctor.DoctorName" class="control-label"></label>
                <input asp-for="Doctor.DoctorName" class="form-control" />
                <span asp-validation-for="Doctor.DoctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Gender" class="control-label"></label>
                <input asp-for="Doctor.Gender" class="form-control" />
                <span asp-validation-for="Doctor.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Degree" class="control-label"></label>
                <input asp-for="Doctor.Degree" class="form-control" />
                <span asp-validation-for="Doctor.Degree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.SpecializationID" class="control-label"></label>
                <select asp-for="Doctor.SpecializationID" class ="form-control" asp-items="ViewBag.SpecializationID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Fee" class="control-label"></label>
                <input asp-for="Doctor.Fee" class="form-control" />
                <span asp-validation-for="Doctor.Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add New Doctor" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
